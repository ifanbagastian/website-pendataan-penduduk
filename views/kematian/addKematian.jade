extends ../layout/base
block content
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Tambah Data Kematian
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', datatoggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/kematian/addkematian')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', datadismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | NIK
                                    input(type='text',name='nik',placeholder='Masukan NIK').form-control
                                .form-group
                                    label
                                        | Nama
                                    input(type='text',name='nama',placeholder='Masukan Nama').form-control
                                .form-group
                                    label
                                        | Tanggal Meninggal
                                    input(type='text',name='tglmeninggal',placeholder='Masukan Tanggal Meninggal').form-control
                                .form-group
                                    label
                                        | Penyebab
                                    input(type='text',name='penyebab',placeholder='Masukan Penyebab Meninggal').form-control
                                .box-footer
                                    button(type='submit').btn.btn-primary
                                        | Submit
                                    a(href='/kematian').btn.btn-primary.pullright
                                        | Back