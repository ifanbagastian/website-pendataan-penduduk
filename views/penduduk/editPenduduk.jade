extends ../layout/base
block content
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Edit Data Penduduk
            .box-tools.pull-right
                button(type='button', data-widget='collapse', datatoggle='tooltip',title='collapse').btn.btn-box-tool
                    i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/penduduk/editpenduduk/#{(id==undefined) ? data.id : id}')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', datadismiss='alert', aria-hidden='true')
                                            | ×
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                - if (messages.msg_info)
                                    .alert.alert-success.alertdismissable
                                        button.close(type='button', datadismiss='alert', aria-hidden='true')
                                            | ×
                                        h4
                                            i.icon.fa.fa-check
                                            | Berhasil!
                                        | !{messages.msg_info}
                                .form-group
                                    label
                                        | NIK
                                    input(type='text',value="#{data.nik}",name='nik',placeholder='Masukan NIK', autofocus).form-control
                                .form-group
                                    label
                                        | Nama
                                    input(type='text',value="#{ (nama == undefined) ? data.nama : nama }",name='nama',placeholder='Masukan Nama').form-control
                                .form-group
                                    label
                                        | Jenis Kelamin
                                    input(type='text',value="#{ (jeniskelamin ==undefined) ? data.jeniskelamin : jeniskelamin }",name='jeniskelamin',placeholder='Masukan Jenis Kelamin').form-control
                                .form-group
                                    label
                                        | Alamat
                                    input(type='text',value="#{ (alamat ==undefined) ? data.alamat : alamat }",name='alamat',placeholder='Masukan Alamat').form-control
                                .form-group
                                    label
                                        | Agama
                                    input(type='text',value="#{ (agama ==undefined) ? data.agama : agama }",name='agama',placeholder='Masukan Agama').form-control
                                .form-group
                                    label
                                        | Pekerjaan
                                    input(type='text',value="#{ (pekerjaan ==undefined) ? data.pekerjaan : pekerjaan }",name='pekerjaan',placeholder='Masukan Pekerjaan').form-control
                            .box-footer
                                input(type="hidden",name="_method", value="PUT")
                                button(type='submit').btn.btn-primary
                                    i.fa.fa-pencil
                                    | Edit
                                a(href='/penduduk').btn.btn-primary.pullright
                                    | Back